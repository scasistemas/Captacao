<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval" >
            <solid
                android:color="#ff9e9e99" />
            <stroke
                android:width="1dp"
                android:color="#ff1a2f1a" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval" >
            <solid android:color="#ff090f09"/>
            <gradient
                android:startColor="#ff54565a"
                android:endColor="#ff373334"
                android:angle="270" />

        </shape>
    </item>

</selector>