<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval" >
            <solid
                android:color="#ff85eb66" />
            <stroke
                android:width="1dp"
                android:color="#ff4c894c" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval" >
            <solid android:color="#ff4c894c"/>
            <gradient
                android:startColor="#70c656"
                android:endColor="#53933f"
                android:angle="270" />

        </shape>
    </item>

</selector>