<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:padding="8dp">

    <CalendarView
        android:id="@+id/calendarView1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14dp"
        android:showWeekNumber="false"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btenviar" android:text="OK"
        android:background="@drawable/button_shape_green" android:layout_width="fill_parent"
        android:textColor="#fff6f6fa" android:layout_height="wrap_content" android:onClick="escData"
        android:gravity="center" android:layout_weight="1" android:layout_below="@id/calendarView1" />



</RelativeLayout>